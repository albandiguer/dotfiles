# == blank lines freak out ack on Windows? ==
# #
--type-add=ruby=.haml,.rake,.rsel,.builder,.jbuilder
--type-add=html=.erb,.haml,.tmpl,.spark,.slim
--type-set=spark=.spark
--type-set=slim=.slim
--type-add=js=.coffee,.js.erb
--type-set=coffee=.coffee
--type-add=css=.scss,.sass,.less
--type-set=less=.less
--type-set=sass=.scss,sass
--type-set=cucumber=.feature
--type-set=markdown=.markdown,.md

--ignore-dir=.bundle
--ignore-dir=.tmp
--ignore-dir=.jhw-cache
--ignore-dir=coverage
--ignore-dir=dist
--ignore-dir=doc
--ignore-dir=fixtures
--ignore-dir=log
--ignore-dir=logs
--ignore-dir=node_modules
--ignore-dir=script
--ignore-dir=system
--ignore-dir=tmp
--ignore-dir=vendor
--ignore-file=is:tags
--ignore-file=is:markdown
--ignore-file=is:._tags

--sort-files
--color
--follow
--group
